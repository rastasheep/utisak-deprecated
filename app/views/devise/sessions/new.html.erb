<%= render "layouts/shared/header", :title => "Prijavi se", :action => "home" %>

<div class="scroll">
  <section>
    <ul class="tableview tableview-links" id="hwlist">

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "uniForm"}) do |f| %>
        <%= devise_error_messages! %>

        <fieldset class="inlineLabels">

          <div class="ctrlHolder">
            <%= f.label :login, "Email ili korisničko ime" %>
            <%= f.text_field :login, :size => "35", :class => "textInput" %>
          </div>

          <div class="ctrlHolder">
            <%= f.label :password, "Sifra" %>
            <%= f.password_field :password, :size => "35", :class => "textInput" %>
            <p class="formHint">Zaboravljna šifra? <%= link_to "zatraži novu.", new_password_path(resource_name) %></p>
          </div>

          <div class="buttonHolder">
              <% if devise_mapping.rememberable? -%>
                <label for="user_remember_me" class="secondaryAction" ><%= f.check_box :remember_me %> Zapamti me</label>
              <% end -%>
            <%= f.submit "Prijavi se", :class => "primaryAction" %>
          </div>

        </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>
    </ul>
  </section>
</div>
