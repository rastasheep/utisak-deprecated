<header class="main">
  <%= link_to "#", :id=>"more-button", :class=>"header-button header-button-icon header-button-left" do %>
    <button><i class="icon-more">More</i></button>
  <% end %>

  <%= render "news/dropdown" %>

  <h1>Prijavi se</h1>

  <%= link_to news_index_path, :class => "header-button header-button-icon header-button-right" do %>
    <button><i class="icon-home">Home</i></button>
  <% end %>
</header>

<div class="scroll">
  <section>
    <ul class="tableview tableview-links" id="hwlist">

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "uniForm"}) do |f| %>
        <%= devise_error_messages! %>

        <fieldset class="inlineLabels">

          <div class="ctrlHolder">
            <%= f.label :login, "Email or username" %>
            <%= f.text_field :login, :size => "35", :class => "textInput" %>
          </div>

          <div class="ctrlHolder">
            <%= f.label :password %>
            <%= f.password_field :password, :size => "35", :class => "textInput" %>
            <p class="formHint">Forgotten your password? <%= link_to "Reset it", new_password_path(resource_name) %></p>
          </div>

          <div class="buttonHolder">
              <% if devise_mapping.rememberable? -%>
                <label for="user_remember_me" class="secondaryAction" ><%= f.check_box :remember_me %> Remember me</label>
              <% end -%>
            <%= f.submit "Sign in", :class => "primaryAction" %>
          </div>

        </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>
    </ul>
  </section>
</div>
