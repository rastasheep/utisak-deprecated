<%= render "layouts/shared/header", :title => "Zaboravljena šifra", :action => "home" %>

<div class="scroll">
  <section>
    <ul class="tableview tableview-links" id="hwlist">

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "uniForm", :method => :post }) do |f| %>
        <%= devise_error_messages! %>

        <fieldset class="inlineLabels">
          <div class="ctrlHolder">
            <%= f.label :login, "Email ili korisničko ime" %>
            <%= f.text_field :login, :size => "35", :class => "textInput" %>
          </div>

          <div class="buttonHolder">
            <%= f.submit "Pošalji mi dalje instrukcije", :class => "primaryAction"  %>
          </div>
        </fieldset>
      <% end %>

      <%= render "devise/shared/links" %>
    </ul>
  </section>
</div>
