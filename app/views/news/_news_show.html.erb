<div class="news-show">
  <header>

    <h1>
      <%= link_to @news.url do %>
        <%= @news.title %>
      <% end  %>
    </h1>

    <p class="metadata">
      <span class="inline-block"><%= @news.points %> glasova, autor <%= @news.user.username %></span>
      <span class="inline-block"><%= render_time @news.created_at %> Â· <%= @news.comments.length %> komentara</span>
      <%= link_to @news.url, @news.url, :class => "external-link" %>
    </p>

  </header>

  <%if @news.content.present? %>
    <p class="news-content">
    <%= @news.content %>
    </p>
  <% end %>

</div>
